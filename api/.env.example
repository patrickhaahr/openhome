# OpenHome API - Production Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials!

# =============================================================================
# REQUIRED - API Authentication
# =============================================================================
# Generate with: openssl rand -hex 32
API_KEY=

# =============================================================================
# REQUIRED - Database Configuration
# =============================================================================
# SQLite database paths (relative paths work for local dev, use absolute for Docker)
DATABASE_URL=sqlite:./data/app.db

# =============================================================================
# OPTIONAL - AdGuard Home Integration
# =============================================================================
# Leave empty to disable AdGuard integration
ADGUARD_HOST=
ADGUARD_USERNAME=
ADGUARD_PASSWORD=

# Set to true if using self-signed certificates
ADGUARD_INSECURE_TLS=false
